<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OneeiActivity"
    android:orientation="vertical">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/textView"
                android:textColor="#000000"
                android:gravity="center"
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="100대 경제지표"
                android:textSize="30sp" />
            <Button
                android:id="@+id/first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국민소득 , 경기 , 기업경영"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="산업활동 , 소비 , 투자"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/third"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="고용 , 임금 , 가계"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="통화, 금융"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/five"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="금리"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/six"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="증권"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/seven"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="물가"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/eight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="국제수지, 대외거래"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/nine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="환율, 외환보유"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/ten"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="경제관련 사회통계"
                android:textSize="20dp"
                android:padding="15dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>

            <Button
                android:id="@+id/exit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="끝내기"
                android:textSize="20dp"
                android:textColor="#333333"
                android:background="@drawable/backbu"
                android:layout_margin="5dp"/>
        </TableLayout>
    </ScrollView>


</LinearLayout>